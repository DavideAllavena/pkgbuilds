# Maintainer: Diego Principe <cdprincipe@at@gmail@dot@com>

pkgname=thunderbird-theme-adwaita-git
pkgver=1.0.1_223c768
pkgrel=1
pkgdesc="Adwaita theme for Thunderbird (Matches the default Gnome Shell theme)"
url="https://addons.mozilla.org/en-US/thunderbird/addon/adwaita-thunderbird"
arch=('any')
license=('MPL')
depends=("thunderbird")
makedepends=('unzip' 'git')
provides=('thunderbird-theme-adwaita')
conflicts=('thunderbird-theme-adwaita')
source=("git://github.com/gnome-integration-team/thunderbird-gnome.git")
md5sums=('SKIP')

pkgver() {
  cd $srcdir/thunderbird-gnome
  echo $(cat $srcdir/thunderbird-gnome/theme/install.rdf | grep em:version | cut -f2 -d'>' | cut -f1 -d'<')_$(git rev-parse --short HEAD)
}


package() {

rel=$(cat $srcdir/thunderbird-gnome/theme/install.rdf | grep em:version | cut -f2 -d'>' | cut -f1 -d'<')
emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' $srcdir/thunderbird-gnome/theme/install.rdf) || return 1
dstdir=$pkgdir/usr/lib/thunderbird/extensions/${emid}

  cd $srcdir/thunderbird-gnome/theme
  install -d $dstdir
  cp -R * $dstdir
  find $pkgdir -type d -exec chmod 0755 {} \;
  find $pkgdir -type f -exec chmod 0644 {} \;
}
