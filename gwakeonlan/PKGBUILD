pkgname=gwakeonlan
pkgver=0.6.1
pkgrel=1
pkgdesc="GTK+ utility to awake machines using the Wake on LAN."
url="http://url.muflone.com/gwakeonlan"
arch=('any')
license=('GPL2')
depends=('gtk3' 'gobject-introspection' 'python2-xdg' 'python2-gobject' 'gtk-update-icon-cache')
source=("${pkgname}-${pkgver}.tar.gz"::"https://github.com/muflone/${pkgname}/archive/${pkgver}.tar.gz")
md5sums=('3b4d50f2b1fed2260f36de492ed1e84f')
sha1sums=('492b3012ab27c832f699fe0759584ba1580d81d2')
sha256sums=('20bad0aa7bdaccb91de81298da92fa5d2c2451a1a581c6fbdd5d07a3f936db54')
install="${pkgname}.install"

build() {
  cd "${pkgname}-${pkgver}"
  python2 setup.py build
}

package() {
  cd "${pkgname}-${pkgver}"
  python2 setup.py install --optimize=1 --root "${pkgdir}"
}

