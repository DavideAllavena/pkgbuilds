# Maintainer: Muflone <webreg@vbsimple.net>

pkgname=bluewho
pkgver=0.1
pkgrel=1
pkgdesc="Information and notification of new discovered bluetooth devices"
url="http://bluewho.muflone.com/"
arch=('any')
license=('GPL2')
depends=('gtk2' 'python2' 'pygtk' 'libglade' 'librsvg' 'python2-pybluez' 'gtk-update-icon-cache')
source=("${pkgname}-${pkgver}.tar.gz"::"https://github.com/muflone/${pkgname}/archive/${pkgver}.tar.gz")
md5sums=('e263d2c77b704514fa5c1c97984cfd9d')
sha1sums=('79f4070de8de4cdd65d9b97157c2dde3e75072ac')
sha256sums=('300815d10b4ebfb20c7421fa7fb5365493b4cb456d5f324986f4e2a50a9da05a')
install="${pkgname}.install"

build() {
  cd "${pkgname}-${pkgver}"
  python2 setup.py build
}

package() {
  cd "${pkgname}-${pkgver}"
  install -d -m 755 "${pkgdir}/usr/bin"
  ln -s "/usr/share/bluewho/src/bluewho.py" "${pkgdir}/usr/bin/bluewho"
  python2 setup.py install --optimize=1 --root "${pkgdir}"
}

