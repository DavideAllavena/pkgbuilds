pkgname=arista-transcoder
pkgver=0.9.7
pkgrel=5
pkgdesc="Easy to use multimedia transcoder for the GNOME Desktop"
arch=('any')
url="http://www.transcoder.org/"
license=('LGPL2.1')
depends=('python2' 'pygtk' 'python2-gconf' 'python2-cairo' 'python2-dbus'
         'python2-gobject2' 'python2-rsvg' 'gstreamer0.10-python'
         'gstreamer0.10-ffmpeg' 'gstreamer0.10-base-plugins'
         'gstreamer0.10-good-plugins' 'gstreamer0.10-bad-plugins'
         'gstreamer0.10-ugly-plugins' 'python2-gudev' 'gnome-icon-theme'
         'desktop-file-utils')
optdepends=('libdvdread: simple foundation for reading DVD video disks'
            'libdvdcss: portable abstraction library for DVD decryption'
            'python-webkit: for in-app documentation'
            'python2-notify: python bindings for libnotify')
source=("http://programmer-art.org/media/releases/arista-transcoder/arista-${pkgver}.tar.gz")
md5sums=('cb6ce0b98a39fd9de33a2d307db8546f')
sha1sums=('22046dd5c8ad1eccbcfc401503f9d5bdbc87c5c5')
sha256sums=('e6028e45516f0c5a736d6ec3c19f783e0a06d103cf2a816b8cc967ab964023ff')
install="${pkgname}.install"

build() {
  cd "arista-${pkgver}"
  python2 setup.py install --root="${pkgdir}"
}
