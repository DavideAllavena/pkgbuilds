# Maintainer: Muflone <muflone@vbsimple.net>

pkgname=cpucompare-git
pkgver=0.5.4.g00da9ec
pkgrel=1
pkgdesc="A GTK+ application to make comparisons between CPU models."
url="https://github.com/muflone/cpucompare"
arch=('any')
license=('GPL2')
depends=('python2' 'gtk3' 'python2-gobject')
makedepends=('git')
provides=('cpucompare')
conflicts=('cpucompare')
source=("git://github.com/muflone/${pkgname%-*}.git")
md5sums=('SKIP')

pkgver() {
  cd "${pkgname%-*}"
  git describe --always | sed 's|-|.|g'
}

build() {
  cd "${pkgname%-*}"
  python2 setup.py build
}

package() {
  cd "${pkgname%-*}"
  python2 setup.py install --root "${pkgdir}"
}

