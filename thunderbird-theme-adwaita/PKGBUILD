# Mantainer: Diego Principe <cdprincipe@at@gmail@dot@com>

pkgname=thunderbird-theme-adwaita
pkgver=1.0.1
pkgrel=1
pkgdesc="Adwaita theme for Thunderbird (Matches the default Gnome Shell theme)"
url="https://addons.mozilla.org/en-US/thunderbird/addon/adwaita-thunderbird"
arch=('any')
license=('MPL')
depends=("thunderbird")
makedepends=('unzip')
source=("https://addons.cdn.mozilla.net/_files/_attachments/330053/adwaita_thunderbird-"$pkgver"-tb-linux.xpi")
md5sums=('b3fd2ba8aff847c6820f646133c15f0d')

package() {
  cd $srcdir
rel=$(cat $srcdir/install.rdf | grep em:version | cut -f2 -d'>' | cut -f1 -d'<')
emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' $srcdir/install.rdf) || return 1
dstdir=$pkgdir/usr/lib/thunderbird/extensions/${emid}
  cd $srcdir
  install -d $dstdir
  cp -R * $dstdir
  rm $dstdir/*.xpi
  find $pkgdir -type d -exec chmod 0755 {} \;
  find $pkgdir -type f -exec chmod 0644 {} \;
}


