# Maintainer: Muflone <muflone@vbsimple.net>
# Contributor: Changaco <me@changaco.net>
pkgname=mbrola-voices-af1
pkgver=1
pkgrel=2
pkgdesc="An Afrikaans male voice for the MBROLA synthesizer"
arch=(any)
url="http://tcts.fpms.ac.be/synthesis/mbrola.html"
groups=(mbrola-voices-af mbrola-voices)
depends=(mbrola)
license=(custom)
source=("http://tcts.fpms.ac.be/synthesis/mbrola/dba/af1/af1.zip")
md5sums=('1391c7745585f12f423e0d9bb04fcc5a')

package(){
  install -d -m 755 "${pkgdir}/usr/share/licenses/$pkgname/"
  ln -s "/usr/share/mbrola/af1/license.txt" "${pkgdir}/usr/share/licenses/$pkgname/LICENSE"
  install -d -m 755 "${pkgdir}/usr/share/mbrola"
  cp -r "${srcdir}/af1" "${pkgdir}/usr/share/mbrola/"
}
