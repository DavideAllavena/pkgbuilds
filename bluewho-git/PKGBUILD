# Maintainer: Muflone <webreg@vbsimple.net>

pkgname=bluewho-git
pkgver=0.1.116.g30d2502
pkgrel=1
pkgdesc="Information and notification of new discovered bluetooth devices"
url="http://bluewho.muflone.com/"
arch=('any')
license=('GPL2')
depends=('gtk3' 'gobject-introspection' 'python2-xdg' 'python2-gobject' 'python2-pybluez' 'gtk-update-icon-cache')
source=("${pkgname}-${pkgver}.tar.gz"::"https://github.com/muflone/${pkgname}/archive/${pkgver}.tar.gz")
provides=('bluewho')
conflicts=('bluewho')
source=("git://github.com/muflone/bluewho.git")
md5sums=('SKIP')
install="${pkgname}.install"

pkgver() {
  cd "${pkgname%-*}"
  git describe --always | sed 's|-|.|g'
}

build() {
  cd "${pkgname%-*}"
  python2 setup.py build
}

package() {
  cd "${pkgname%-*}"
  python2 setup.py install --optimize=1 --root "${pkgdir}"
}

