# Mantainer: Diego Principe <cdprincipe@at@gmail@dot@com>

pkgname=firefox-theme-adwaita
pkgver=20.1
pkgrel=1
pkgdesc="Adwaita theme for Firefox (Matches the default Gnome Shell theme)"
url="https://addons.mozilla.org/en-US/firefox/addon/adwaita/"
arch=('any')
license=('MPL')
depends=("firefox")
makedepends=('unzip')
source=("https://addons.cdn.mozilla.net/storage/public-staging/320596/gnome_3-${pkgver}-fx.xpi")
md5sums=('af483fb550986fec49ad4874c68e326c')

package() {
  cd $srcdir
  unzip gnome_3-${pkgver}-fx.xpi -d ${srcdir}/theme
rel=$(cat $srcdir/theme/install.rdf | grep em:version | cut -f2 -d'>' | cut -f1 -d'<')
emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' $srcdir/theme/install.rdf) || return 1
dstdir=$pkgdir/usr/lib/firefox/browser/extensions/${emid}
  cd $srcdir
  install -d $dstdir
  cp -R * $dstdir
  rm $dstdir/*.xpi
  find $pkgdir -type d -exec chmod 0755 {} \;
  find $pkgdir -type f -exec chmod 0644 {} \;
}

